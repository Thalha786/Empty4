package Sample1;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.interactions.Actions;

class Sample1
{
	public static void main(String args[])
	{
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\Public\\Downloads\\Drivers\\chromedriver.exe");
		WebDriver driver=new ChromeDriver();
		driver.navigate().to("http://www.leafground.com/pages/sortable.html");
List<WebElement> selectables=driver.findElements(By.xpath("//*[@id='sortable']/li"));
WebElement from=selectables.get(6);
WebElement to=selectables.get(0);
Actions actions=new Actions(driver);
actions.clickAndHold(from).moveToElement(to).release(to).build().perform();
//actions.dragAndDrop(from, to).build().perform();
	}
}